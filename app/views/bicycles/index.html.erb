
<h2><%= t('bikes_list') %></h2>

<% if @bicycles.any? %>

    <table class="table table-hover">
      <thead>
      <tr>
        <th><%= t('bike_title') %></th>
        <th><%= t('bike_key') %> </th>
      </tr>
      </thead>

      <tbody>
      <% @bicycles.each do |bicycle| %>
          <tr>
            <td><%= bicycle.title %></td>
            <td><%= bicycle.key %></td>
            <td>
              <a class="btn " href="<%= url_for(bicycle_path(bicycle)) %>"><i class="icon-ok"></i></a>
              <a class="btn " href="<%= url_for(edit_bicycle_path(bicycle)) %>"><i class="icon-edit"></i></a>
              <%= link_to '<i class="icon-remove"></i>'.html_safe, bicycle, data:{ :confirm => 'Are you sure?'}, :method => :delete, :class => 'btn' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>


<% else %>
    <%= t('no_bicycle_message') %>
<% end %>


<br>

<%= link_to t('bicycle_add_new'), new_bicycle_path %>
