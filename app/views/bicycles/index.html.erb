<% if notice %>
    <p id="notice" ><%= notice %></p>
<% end %>

<h2><%= t('bikes_list') %></h2>

<% if @bicycles.any? %>

    <table class="table table-hover">
      <thead>
      <tr>
        <th><%= t('bike_title') %></th>
        <th><%= t('bike_key') %> </th>
      </tr>
      </thead>

      <tbody>
      <% @bicycles.each do |bicycle| %>
          <tr>
            <td><%= bicycle.title %></td>
            <td><%= bicycle.key %></td>
            <td><a class="btn " href=""><i class="icon-search"></i></a><%= link_to t('watch_link'), bicycle_path(bicycle) %></td>
            <td><%= link_to t('edit_link'), edit_bicycle_path(bicycle) %></td>

            <td><%= link_to t('delete_link'), bicycle, data:{ :confirm => 'Are you sure?'}, :method => :delete %></td>
          </tr>
      <% end %>
      </tbody>
    </table>


<% else %>
    <%= t('no_bicycle_message') %>
<% end %>


<br>

<%= link_to t('bicycle_add_new'), new_bicycle_path %>
